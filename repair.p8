function new_vector(x,y)
 v={}
 v.x=x
 v.y=y
 return v
end

function vector_sum(v1,v2)
 v={}
 v.x=v1.x+v2.x
 v.y=v1.y+v2.y
 return v
end

function vector2str(v)
 return "("..v.x..","..v.y..")"
end

function dump_list(l)
 local s=nil
 for i in all(l) do
  if s==nil then
   s="["
  else
   s=s..","
  end
  s=s..i
 end
 s=s.."]"
 printh(s)
end

dirs={1,2,3,4}
vdirs={
 new_vector(0,-1),
 new_vector(1,0),
 new_vector(0,1),
 new_vector(-1,0)
}

function clkwise(dr)
 return 1+dr%4
end

function cclkwise(dr)
 return 1+(dr+2)%4
end

function opposite(dr)
 return 1+(dr+1)%4
end

function rnd_item_from(l)
 return l[ceil(rnd(#l))]
end
